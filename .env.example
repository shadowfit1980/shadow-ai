# Shadow AI v3 - Environment Configuration Template
# Copy this file to .env and fill in your API keys

# ===== Cloud AI Models =====
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here
MISTRAL_API_KEY=your-mistral-api-key-here
DEEPSEEK_API_KEY=your-deepseek-api-key-here

# ===== Design Integration =====
FIGMA_TOKEN=your-figma-personal-access-token
CANVA_CLIENT_ID=your-canva-client-id
CANVA_CLIENT_SECRET=your-canva-client-secret

# ===== Database & Collaboration =====
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-supabase-anon-key

# ===== Local AI Models =====
# Ollama Cloud API Key (for hosted Ollama services)
OLLAMA_API_KEY=your-ollama-api-key-here

# Ollama server URL (default: http://localhost:11434)
OLLAMA_URL=http://localhost:11434

# GPT4All model path (optional, defaults to app data directory)
GPT4ALL_MODEL_PATH=

# LM Studio server URL (default: http://localhost:1234)
LMSTUDIO_URL=http://localhost:1234

# ===== Application Settings =====
# Environment: development | production
NODE_ENV=development

# Enable voice control (true | false)
ENABLE_VOICE=true

# Enable real-time collaboration (true | false)
ENABLE_COLLABORATION=false

# Default AI model (openai | anthropic | mistral | ollama | auto)
DEFAULT_MODEL=auto

# ===== Security =====
# Encryption key for local data (generate with: openssl rand -hex 32)
ENCRYPTION_KEY=

# ===== Deployment =====
VERCEL_TOKEN=your-vercel-token
NETLIFY_TOKEN=your-netlify-token
RENDER_API_KEY=your-render-api-key

# ===== Analytics & Monitoring (Optional) =====
SENTRY_DSN=
POSTHOG_API_KEY=
