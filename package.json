{
  "name": "shadow-ai",
  "productName": "Shadow AI",
  "version": "3.0.0",
  "description": "Autonomous AI Engineering Agent - Your complete software development partner",
  "main": "dist/main/main/index.js",
  "bin": {
    "shadow-ai": "./dist/cli/index.js"
  },
  "author": "Shadow AI Team",
  "license": "MIT",
  "scripts": {
    "dev": "concurrently \"npm run dev:renderer\" \"npm run dev:main\"",
    "dev:renderer": "vite",
    "dev:main": "tsc -p tsconfig.main.json && ELECTRON_RUN_AS_NODE= NODE_ENV=development electron . --no-sandbox",
    "test": "jest",
    "build": "npm run build:renderer && npm run build:main",
    "build:renderer": "vite build",
    "build:main": "tsc -p tsconfig.main.json",
    "build:cli": "tsc -p tsconfig.cli.json",
    "package:mac": "npm run build && electron-builder --mac",
    "package:win": "npm run build && electron-builder --win",
    "package:linux": "npm run build && electron-builder --linux",
    "package:all": "npm run build && electron-builder -mwl"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "@google/generative-ai": "^0.24.1",
    "@heroicons/react": "^2.2.0",
    "@langchain/core": "^1.1.5",
    "@mistralai/mistralai": "^1.10.0",
    "@modelcontextprotocol/sdk": "^1.23.0",
    "@monaco-editor/react": "^4.6.0",
    "@reactflow/core": "^11.11.4",
    "@reactflow/node-resizer": "^2.2.14",
    "@supabase/supabase-js": "^2.87.1",
    "@types/diff": "^7.0.2",
    "@xenova/transformers": "^2.17.2",
    "axios": "^1.13.2",
    "chromadb": "^3.1.8",
    "diff": "^8.0.2",
    "dockerode": "^4.0.9",
    "dotenv": "^17.2.3",
    "electron-store": "^8.2.0",
    "framer-motion": "^12.23.26",
    "glob": "^13.0.0",
    "langchain": "^1.2.0",
    "node-machine-id": "^1.1.12",
    "openai": "^6.10.0",
    "pdf-parse": "^2.4.5",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-dropzone": "^14.2.10",
    "reactflow": "^11.11.4",
    "sharp": "^0.34.5",
    "systeminformation": "^5.27.14",
    "ws": "^8.18.3",
    "yaml": "^2.8.2",
    "zustand": "^5.0.1",
    "commander": "^12.0.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/dockerode": "^3.3.47",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.0.2",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^5.1.2",
    "autoprefixer": "^10.4.23",
    "concurrently": "^9.0.1",
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "jest": "^30.2.0",
    "playwright": "^1.57.0",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.19",
    "ts-jest": "^29.2.2",
    "typescript": "^5.6.3",
    "vite": "^7.3.0"
  },
  "build": {
    "appId": "com.shadowai.app",
    "productName": "Shadow AI",
    "copyright": "Copyright Â© 2025 Shadow AI",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "assets/icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "assets/entitlements.mac.plist",
      "entitlementsInherit": "assets/entitlements.mac.plist"
    },
    "dmg": {
      "title": "Shadow AI ${version}",
      "icon": "assets/icon.icns",
      "background": "assets/dmg-background.png",
      "window": {
        "width": 600,
        "height": 400
      },
      "contents": [
        {
          "x": 150,
          "y": 200,
          "type": "file"
        },
        {
          "x": 450,
          "y": 200,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ],
      "category": "Development",
      "icon": "assets/icon.png"
    }
  }
}